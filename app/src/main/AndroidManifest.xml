<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mrandroid.app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Learning kids"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Attendance"
        tools:targetApi="31">
        <activity
            android:name=".activity.auth.SignupActivity"
            android:exported="false"
            android:label="إنشاء حساب"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.auth.LoginActivity"
            android:exported="false"
            android:label="تسجيل الدخول">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.auth.SplashActivity"
            android:exported="true"
            android:label="تعلم الأطفال">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.main.HomeActivity"
            android:exported="true"
            android:label="الاختبار"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".activity.main.ExamResultActivity"
            android:exported="true"
            android:label="نتيجة الاختبار"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>